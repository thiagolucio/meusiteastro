---
import "../styles/normalize.scss";
import "../styles/global.scss";

import Button from "../components/Buttons.astro";
import Avatar from "../components/Avatar.astro";
import Linkedin from "../components/Linkedin.astro";
import RedesSociais from "../components/RedesSociais.astro";
import Logo from "../components/Logo.astro";
import Infos from "../components/Infos.astro";
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Astro</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://platform.linkedin.com/badges/js/profile.js"
      async
      defer
      type="text/javascript"
    ></script>
  </head>
  <body>
    <div class="global-content">
      <header>
        <Logo />
        <RedesSociais />
      </header>
      <content>
        <div class="aside">
          <Avatar />
          <div class="linkedin"><Linkedin /></div>
          <Infos />
        </div>
        <main class="l-base-layout">
          <slot />
        </main>
      </content>
      <footer>
        <img src="/banner-footer.png" alt="Banner do footer" />
      </footer>
    </div>
  </body>
</html>

<style lang="scss">
  header {
    width: 100%;
    align-items: flex-start;
    justify-content: space-between;
    display: flex;
    flex-direction: row;
  }
  .global-content {
    max-width: 1440px;
    margin: 30px auto;
  }
  .l-base-layout {
  }
  content {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
  }
  .aside {
    width: 30%;
    width: 30%;
    height: 100%;
    padding: 30px 16px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    align-content: center;
    justify-content: center;
  }
  .l-base-layout {
    width: 100%;
    height: 100%;
    padding: 30px 16px;
  }
  footer {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: flex-end;
    img {
      height: 200px;
      width: auto;
      margin-right: 2px;
      float: right;
    }
  }

  @media (max-width: 1024px) {
    content {
      flex-direction: column;
    }
    .aside {
      width: 100%;
      align-items: center;
      justify-content: center;
      text-align: center;
      gap: 30px;
    }
    .content-info {
      width: 100%;
      text-align: center;
      justify-content: center;
    }
    .linkedin {
      display: none;
    }
  }
  @media (max-width: 615px) {
    header {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      justify-items: center;
      gap: 16px;
    }
  }
</style>
