---
const { text } = Astro.props;
const { icon } = Astro.props;
const { url } = Astro.props;
---

<a href={url} target="_blank" class="button">
  <img src={icon} alt={text} width="24" height="30" />
  <span>{text}</span>
</a>

<style lang="scss">
  a.button {
    width: 300px !important;
    padding: 8px 20px;
    border-radius: 30px;
    color: #ffffff !important;
    background: #0a66c2;
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    justify-content: center;
    text-align: center;
    border: none;
    &:hover {
      background: #01458a;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
      text-decoration: none;
      box-shadow: rgba(10, 102, 194, 0.4) 0px 5px,
        rgba(10, 102, 194, 0.3) 0px 10px, rgba(10, 102, 194, 0.2) 0px 15px,
        rgba(10, 102, 194, 0.1) 0px 20px, rgba(10, 102, 194, 0.05) 0px 25px;
    }
  }
  a.button span {
    margin-left: 8px;
}
a:link,
a:hover {
    text-decoration: none;
    color: #ffffff;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 600;
  }
</style>
